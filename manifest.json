{
  "manifest_version": 2,
  "name": "Create GitHub Issue",
  "version": "0.3",
  "browser_action": {
    "default_title": "Create GitHub Issue - Configuration",
    "default_icon": {
      "16": "icon.svg"
    },
    "default_popup": "popup.html"
  },
  "background": {
      "scripts": ["background.js"]
  },
  "icons": {
    "128": "icon.svg"
  },
  "permissions": [
      "alarms",
      "contextMenus",
      "notifications",
      "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "create-issue@andymckay.org"
    }
  }
}
